<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="info.androidhive.glide.activity.AboutActivity"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:src="@drawable/logografmedia"/>
    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Студия “GRAF MEDIA” запустила новое мобильное приложение. Уникальность этого приложения в том что вы можете скачать свое фото сразу и бесплатно. Это позволяет вам мгновенно получать качественные и красивые фотографии. Вам больше не нужно покупать фотографии в бумажном виде. "/>
    <TextView
        android:padding="5dp"
        android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Номер для заказа: 0701 22 99 68"/>
    <TextView
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Номер для сотрудничества: 0706 88 77 21"/>
    <TextView
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Graf media – умеем удивлять!"/>

    <TextView
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ВСЕ ПРАВА ЗАЩИЩЕНЫ!"/>
    <TextView
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Напомним что данное приложение является частной сообственностью. Повтор или использование подобной продукции уголовно наказуема по КР"/>

        </LinearLayout>
    </ScrollView>
        </LinearLayout>
